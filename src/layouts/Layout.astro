---
interface Props {
  title: string;
}

const { title } = Astro.props;
const description = 'The terminal-native IDE built for you and your AI to operate as one — same debugger, tests, and git. VSCode extensions. No modal editing. Built in Rust.';
const url = 'https://oxideide.dev';
const ogImageSquare = `${url}/og-image.png`;
const ogImageRect = `${url}/og-image-rectangle.png`;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>{title}</title>

    <!-- SEO -->
    <meta name="description" content={description} />
    <meta name="keywords" content="IDE, terminal IDE, Rust IDE, AI coding, LLM agent, VSCode extensions, terminal editor, MCP, IDE Toolbox Protocol, Oxide IDE, Galvanic Labs" />
    <meta name="author" content="Galvanic Labs" />
    <meta name="robots" content="index, follow" />
    <link rel="canonical" href={url} />

    <!-- Open Graph -->
    <meta property="og:title" content="Oxide IDE — The IDE your AI agent can operate" />
    <meta property="og:description" content={description} />
    <meta property="og:type" content="website" />
    <meta property="og:url" content={url} />
    <meta property="og:image" content={ogImageRect} />
    <meta property="og:image:type" content="image/png" />
    <meta property="og:image:width" content="2400" />
    <meta property="og:image:height" content="1260" />
    <meta property="og:image:alt" content="Oxide IDE — The IDE your AI agent can operate" />
    <meta property="og:site_name" content="Oxide IDE" />
    <meta property="og:locale" content="en_US" />

    <!-- Twitter Card -->
    <meta name="twitter:card" content="summary_large_image" />
    <meta name="twitter:title" content="Oxide IDE — The IDE your AI agent can operate" />
    <meta name="twitter:description" content={description} />
    <meta name="twitter:image" content={ogImageRect} />

    <!-- Favicons -->
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <link rel="icon" type="image/png" href="/favicon.png" sizes="32x32" />
    <link rel="apple-touch-icon" href="/favicon.png" />
    <meta name="theme-color" content="#0C1220" />

    <!-- Fonts -->
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link href="https://fonts.googleapis.com/css2?family=JetBrains+Mono:ital,wght@0,100..800;1,100..800&display=swap" rel="stylesheet" />

    <!-- Structured Data -->
    <script type="application/ld+json" set:html={JSON.stringify({
      "@context": "https://schema.org",
      "@type": "SoftwareApplication",
      "name": "Oxide IDE",
      "description": "A modern IDE that runs in your terminal. Terminal-native, VSCode extensions, LLM agents as first-class citizens. Built in Rust.",
      "url": url,
      "applicationCategory": "DeveloperApplication",
      "operatingSystem": "Linux, macOS, Windows",
      "license": "https://www.apache.org/licenses/LICENSE-2.0",
      "programmingLanguage": "Rust",
      "author": {
        "@type": "Organization",
        "name": "Galvanic Labs",
        "url": "https://github.com/galvaniclabs"
      },
      "offers": {
        "@type": "Offer",
        "price": "0",
        "priceCurrency": "USD"
      }
    })} />
  </head>
  <body class="bg-oxide-bg text-oxide-text font-mono min-h-screen overflow-x-hidden">
    <slot />
  </body>
</html>
